    <h1>Merci d'avoir complété l'offre !</h1>
    <p>Voici ton code unique :</p>
    <div class="code" id="code">Génération en cours...</div>

    <script>
        // Liste des codes uniques
        const codes = [
            "CODE123", "CODE456", "CODE789", "CODE101", "CODE202"
        ];

        // Fonction pour choisir un code aléatoire
        function getRandomCode() {
            const index = Math.floor(Math.random() * codes.length);
            return codes[index];
        }

        // Afficher le code
        const codeElement = document.getElementById("code");
        const code = getRandomCode();
        codeElement.textContent = code;

        // (optionnel) Supprimer le code de la liste après l'avoir affiché
        // codes.splice(index, 1); // À gérer côté serveur si tu veux vraiment l'unicité
    </script>
